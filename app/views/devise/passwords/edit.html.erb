<%= render 'partials/header_service_message' %>
<div class="row">
  <div class="col s4 offset-s4">
    <h2 class="header"><%= t('change-password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field input-field">
        <label class="" for="user_password"><%= t('new-password') %></label>
        <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
        <% if @minimum_password_length %>
            <em class="characters-minimum">(<%= @minimum_password_length %> <%= t('characters-minimum') %>)</em>
        <% end %><br />
      </div>

      <div class="field input-field">
        <label class="" for="user_password_confirmation"><%= t('user-pass-confirm') %></label>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit t('change-password'), class: 'waves-effect waves-light btn'%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
