<div class="row">

      <div class="col s6 offset-s3 coverBorder" style="background: url(<%= current_user.header.url(:medium) %>) no-repeat scroll center center / cover rgba(0,0,0,0)">
        <div>
          <%= image_tag current_user.avatar.url(:medium), class: "avatar-profile" %>
          <label class="title-profile"><%= current_user.name + " " + current_user.last_name %></label>
        </div>
      </div>
      <div class="col s6 offset-s3 white">
        <div class="row">
          <div class="col s12">
            <ul class="tabs">
              <li class="tab col s3"><a class="active" href="#tab-information-profile"><%= t('information') %></a></li>
              <li class="tab col s3"><a href="#tab-friends-profile"><%= t('friends') %></a></li>
              <li class="tab col s3"><a href="#tab-publications"><%= t('publications') %></a></li>
            </ul>
          </div>


          <%= render 'tab_information_profile' %>

          <div id="tab-friends-profile" class="col s12">
            <% if current_user.friends.length > 0 %>
                <% current_user.friends.each do |friends| %>
                    <div class="card" id="buttom-profile-friends-<%= friends.id %>">
                      <div class="card-panel">
                        <div class="row">
                          <div class="col s2">
                            <%= image_tag friends.avatar.url(:medium), class: "avatar-profile-avatar" %>
                          </div>
                          <div class="col s6">
                            <div class="row">
                              <div class="col s12">
                                <%= friends.name + " " + friends.last_name %>
                              </div>
                              <div class="col s12">
                                <%= friends.email %>
                              </div>
                              <div class="col s12">
                                <%= friends.phone %>
                              </div>
                              <div class="col s12">
                                <%= friends.country %>
                              </div>
                            </div>
                          </div>
                          <div class="col s4">
                            <%= link_to t('cancel'), friendships_cancel_path(friends.id), :remote => true, :method => :post %>
                          </div>
                        </div>
                      </div>
                    </div>
                <% end %>
            <% end %>
          </div>

          <%= render 'tab_publications_profile' %>

        </div>
      </div>
</div>