<%= form_for @friendship, :method => :post, :remote => true do |f| %>
    <%= f.number_field :user_id, value: current_user.id, class: "hidden" %>
    <%= f.number_field :friend_id, value: friend_id, class:"hidden" %>
    <%= f.check_box :accepted, value: false, class:"hidden" %>
    <%= f.submit t("add-friends"), class: 'waves-effect waves-light btn btn-public' %>
<% end %>


