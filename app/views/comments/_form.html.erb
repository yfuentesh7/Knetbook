<div class="row">
    <%= form_for(@comment) do |f| %>
      <% if @comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

          <ul>
          <% @comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

        <div class="col s12">
          <div class="field">
            <%= f.number_field :user_id, value: current_user.id, class: "hidden", id: "comment_user_id_" + post.id.to_s %>
          </div>
          <div class="field">
            <%= f.number_field :post_id, value: post.id, class: "hidden", id: "comment_post_id_" + post.id.to_s %>
          </div>
          <div class="row">
            <div class="col s2">
              <%= image_tag current_user.avatar.url(:medium), class:"avatar-post" %>
            </div>
            <div class="col s10">
              <div class="field input-field">
                <label for="comment_content_<%= post.id %>"><%= t('information') %></label>
                <%= f.text_field :content, class:"materialize-textarea", id: "comment_content_" + post.id.to_s %>
              </div>
            </div>
          </div>
        </div>

        <div class="actions">
          <%= f.submit 'Comment', class: 'waves-effect waves-light btn btn-public' %>
        </div>

    <% end %>
</div>



